{% extends "layout.njk" %}

{% block head %}
    <title>{{recipe.title}} — Foodfy</title>
{% endblock %}

{% block li %}
<li><a href="/about">Sobre</a></li>
<li><a class="header_active" href="/recipes">Receitas</a></li>
{% endblock %}

{% block content %}
<main>
    <div class="recipe_wrapper">
        <div class="recipe_header">

            <div class="recipe_img">
                <img src="{{recipe.image}}" alt="Receita de {{recipe.title}}">
            </div>

            <h1>{{recipe.title}}</h1>
            <h3>por {{recipe.author}}</h3>

        </div>

        <div class="recipe_text">

            <div class="_recipe showing">
                <h4>Ingredientes:</h4> 
                
                <ul>
                    {% for ingredient in ingredients %}
                    <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>

            
            <div class="_recipe hiding">
                <h4>Modo de preparo</h4>
                <ul>
                    {% for step in steps %}
                    <li>{{step}}</li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="_recipe showing">
                <h4>Informações adicionais</h4>
                <p>{{recipe.information}}</p>
            </div>

        </div>
    </div>
</main>
{% endblock %}
