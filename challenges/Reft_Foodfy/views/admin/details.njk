{% extends "admin/layout.njk" %}

{% block content %}
<div class="admin_detail_wrapper">
    <h1>Receita: {{recipe.title}}</h1>

    <a href="#">Editar Receita</a>
</div>

<div class="recipe_wrapper">
    <div class="recipe_header">

        <div class="recipe_img">
            <img src="{{recipe.image}}" alt="Receita de {{recipe.title}}">
        </div>

        <h1>{{recipe.title}}</h1>
        <h3>por {{recipe.author}}</h3>

    </div>

    <div class="recipe_text">

        <div class="_recipe">
            <div class="h4_a">
                <h4>Ingredientes:</h4> 
            </div>
            
            <ul>
                {% for ingredient in ingredients %}
                <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>

        
        <div class="_recipe">
            <div class="h4_a">
                <h4>Modo de preparo</h4>
            </div>

            <ul>
                {% for step in steps %}
                <li>{{step}}</li>
                {% endfor %}
            </ul>
        </div>
        
        <div class="_recipe">
            <div class="h4_a">
                <h4>Informações adicionais</h4>
            </div>

            <p>{{recipe.information}}</p>
        </div>

    </div>
</div>


{% endblock %}